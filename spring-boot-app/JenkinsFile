pipeline {
    agent any

    tools {
        // Must match the Maven installation name in Manage Jenkins â†’ Global Tool Configuration
        maven 'Maven'
    }

    environment {
        DOCKER_IMAGE = 'babu120987/my-app:latest' // Replace with your DockerHub username/image
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'Code is already checked out by Jenkins declarative pipeline'
            }
        }

        stage('Build & Test') {
            steps {
                dir('spring-boot-app') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Sonar Analysis') {
            steps {
                dir('spring-boot-app') {
                    withSonarQubeEnv('MySonarQubeServer') { // Name of SonarQube server in Jenkins
                        sh 'mvn clean verify sonar:sonar'
                    }
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                dir('spring-boot-app') {
                    sh "docker build -t ${DOCKER_IMAGE} ."
                    sh "docker push ${DOCKER_IMAGE}"
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                dir('spring-boot-app') {
                    sh "kubectl apply -f k8s/deployment.yaml"
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning workspace...'
            cleanWs()
        }
    }
}
