pipeline {
  agent any  // Use a normal Jenkins node where Docker & Maven are installed
  stages {
    stage('Checkout') {
      steps { git url: '...', branch: 'main' }
    }
    stage('Build & Test') {
      steps { sh 'mvn clean package' }
    }
    stage('Docker Build & Push') {
      steps { 
        sh 'docker build -t my-image:${BUILD_NUMBER} .'
        sh 'docker push my-image:${BUILD_NUMBER}'
      }
    }
  }
}
